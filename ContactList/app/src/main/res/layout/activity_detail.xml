<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin_big"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin_big"
    tools:context="com.beginner.micromaster.contactlist.DetailActivity">


        <ImageView
            android:id="@+id/contact_photo"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/contact"
            android:layout_alignTop="@+id/contact_name"
            android:layout_alignLeft="@+id/email_title"
            android:layout_alignStart="@+id/email_title"            />

        <TextView
            android:id="@+id/contact_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="May"
            android:textStyle="bold"
            android:layout_alignParentTop="true"
            android:layout_alignLeft="@+id/contact_phone"
            android:layout_alignStart="@+id/contact_phone" />

        <TextView
            android:id="@+id/contact_last_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Felix"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_below="@+id/contact_name"
            android:layout_alignLeft="@+id/contact_name"
            android:layout_alignStart="@+id/contact_name"/>

        <TextView
            android:id="@+id/email_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/hint_email"
            android:layout_marginTop="46dp"
            android:layout_below="@id/contact_last_name"
            android:layout_alignLeft="@+id/phone_title"
            android:layout_alignStart="@+id/phone_title"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:textColor="@color/colorPrimaryDark"
            />

        <TextView
            android:id="@+id/phone_title"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="@string/hint_phone_number"
            android:layout_below="@id/email_title"
            android:textColor="@color/colorPrimaryDark"/>

        <TextView
            android:id="@+id/contact_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="email@gmail.com"
            android:layout_above="@+id/contact_phone"
            android:layout_toEndOf="@+id/phone_title"
            android:layout_toRightOf="@+id/phone_title"
            android:paddingBottom="@dimen/activity_vertical_margin"/>

        <TextView
            android:id="@+id/contact_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1111111111"
            android:layout_alignBaseline="@+id/phone_title"
            android:layout_alignBottom="@+id/phone_title"
            android:layout_alignLeft="@+id/contact_email"
            android:layout_alignStart="@+id/contact_email"/>

</RelativeLayout>
